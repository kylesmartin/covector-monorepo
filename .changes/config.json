{
  "gitSiteUrl": "https://github.com/kylesmartin/test-monorepo.git/",
  "pkgManagers": {
    "javascript": {
      "version": true,
      "getPublishedVersion": "npm view ${ pkgFile.pkg.name } version",
      "publish": [
        "npm publish --access public"
      ]
    }
  },
  "packages": {
    "greetings-go": {
      "path": "./pkg",
      "manager": "golang"
    },
    "ts-tool": {
      "path": "./ts-tool",
      "manager": "javascript"
    }
  }
}